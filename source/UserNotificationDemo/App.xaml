<Application x:Class="UserNotificationDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Uncomment LightBrushs or DarkBrushs to see the Light or Dark Theme definitions   -->
                <!-- ResourceDictionary Source="/UserNotification;component/Themes/LightBrushs.xaml" /-->
                <!-- ResourceDictionary Source="/UserNotification;component/Themes/DarkBrushs.xaml" /-->
            </ResourceDictionary.MergedDictionaries>

            <!-- Define resources for notification demo windows -->
            <BitmapImage UriSource="pack://application:,,,/Resources/notification-icon.png" x:Key="notification" />
            <BitmapImage UriSource="pack://application:,,,/Resources/microsoft-windows-8-logo.png" x:Key="windows8" />
            <BitmapImage UriSource="pack://application:,,,/Resources/facebook-button.png" x:Key="facebook" />
            <BitmapImage UriSource="pack://application:,,,/Resources/Radiation_warning_symbol.png" x:Key="warning"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
