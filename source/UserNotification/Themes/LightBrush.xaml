<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="NotificationWindowBackground" Color="#FFFFFFFF" />
  <SolidColorBrush x:Key="NotificationWindowBorder" Color="#FFA0A0A0" />
  <SolidColorBrush x:Key="NotificationWindowForeground" Color="#FF000000" />

  <!-- Close Button Brushes -->
  <SolidColorBrush x:Key="NormalBorderBrush" Color="Black" />
  <SolidColorBrush x:Key="DefaultedBorderBrush" Color="Black" />

  <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888" />

  <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#EEE" />

  <SolidColorBrush x:Key="DisabledBorderBrush" Color="#AAA" />

  <SolidColorBrush x:Key="CloseNormal" Color="White" />

  <SolidColorBrush x:Key="CloseOver" Color="Gray" />

  <SolidColorBrush x:Key="ClosePressed" Color="#090909" />

  <BitmapImage x:Key="Image_Close_Button" UriSource="pack://application:,,,/UserNotification;component/Resources/close_x_light.png"/>

</ResourceDictionary>
